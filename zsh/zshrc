# Android configuration
#export ANDROID_HOME="/home/aer/Android/Sdk"
#export PATH="${PATH}:$ANDROID_HOME/tools:$ANDROID_HOME/platform-tools"
#export PATH="${PATH}:/home/aer/Programs/android-studio/gradle/gradle-4.1/bin"

# Ecobloom Arduino enviromental variables
export ECOBLOOM_ARDUINO_HOME="~/projects/ecobloom/arduino"
export ESP_ARDUINO_HOME="~/programs/arduino"

# Path to your oh-my-zsh installation.
# https://github.com/robbyrussell/oh-my-zsh.git
export ZSH=$HOME/dotfiles/zsh/oh-my-zsh

ZSH_THEME="xiong-chiamiov-plus"

# Plugins
plugins=(
        git 
        vi-mode
        )

source $ZSH/oh-my-zsh.sh

# Kill the vi mode lag
export KEYTIMEOUT=1

# Function to switch and save the current path
function pwd {  
  builtin pwd "$@";
  echo "$PWD" > ~/.cwd;
}
export cd  
alias cwd='cd "$(cat ~/.cwd)"' 

# Keybinds
bindkey "^P" up-line-or-search
bindkey "^N" down-line-or-search
